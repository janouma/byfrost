{
  "name": "@byfrost/utils",
  "version": "1.0.1",
  "description": "utilities for @byfrost/core",
  "main": "index.js",
  "devDependencies": {
    "@japa/expect": "^3.0.2",
    "@japa/runner": "^3.1.2",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "gmail-send": "^1.8.10",
    "lint-staged": "^15.2.2",
    "mjml": "^4.7.1",
    "standard": "^17.1.0",
    "testdouble": "^3.20.2"
  },
  "peerDependencies": {
    "gmail-send": "^1.8.10",
    "mjml": "^4.2.0"
  },
  "peerDependenciesMeta": {
    "gmail-send": {
      "optional": true
    },
    "mjml": {
      "optional": true
    }
  },
  "bin": {
    "@byfrost/utils": "bin/index.js"
  },
  "scripts": {
    "lint": "eslint --no-error-on-unmatched-pattern",
    "standalone-lint": "npm run lint -- '{*,tests/**/*}.{js,cjs,mjs}'",
    "test": "node bin/test.js",
    "lint-staged": "npx lint-staged",
    "tag": "if git tag -l utils$npm_package_version | grep -q \"^utils$npm_package_version$\"; then echo \"Tag utils$npm_package_version already exists\"; else echo \"Adding tag utils$npm_package_version\"; git tag utils$npm_package_version; fi"
  },
  "author": "janouma",
  "license": "ISC",
  "type": "module",
  "volta": {
    "extends": "../../package.json"
  },
  "engines": {
    "node": ">=20.x",
    "npm": ">=10.x"
  },
  "files": [
    "*.js",
    "tests/helpers/**/*.js",
    "tests/setup/**/*.js",
    "!bin/test.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/janouma/byfrost.git"
  }
}
