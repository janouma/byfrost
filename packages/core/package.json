{
  "name": "@byfrost/core",
  "version": "0.5.1",
  "description": "web components micro builder",
  "main": "bin/index.js",
  "keywords": [
    "build",
    "web component",
    "custom element"
  ],
  "author": "janouma",
  "license": "ISC",
  "type": "module",
  "volta": {
    "extends": "../../package.json"
  },
  "engines": {
    "node": ">=20.x",
    "npm": ">=10.x"
  },
  "files": [
    "lib/**/*.js",
    "!bin/test.js"
  ],
  "bin": {
    "@byfrost/core": "bin/index.js"
  },
  "scripts": {
    "lint": "eslint --no-error-on-unmatched-pattern",
    "standalone-lint": "npm run lint -- '{tests/**/*,lib/**/*,scripts/**/*,bin/**/*}.{js,cjs,mjs}'",
    "test": "node bin/test.js",
    "lint-staged": "npx lint-staged"
  },
  "devDependencies": {
    "@japa/expect": "^3.0.2",
    "@japa/runner": "^3.1.2",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "joi": "^17.12.3",
    "lint-staged": "^15.2.2",
    "standard": "^17.1.0",
    "svelte": "^4.2.12",
    "testdouble": "^3.20.2"
  },
  "dependencies": {
    "@byfrost/utils": "^1.0.1",
    "acorn": "^8.11.3",
    "acorn-walk": "^8.3.4",
    "terser": "^5.30.0"
  },
  "peerDependencies": {
    "@byfrost/svelte": "^0.5.1",
    "@byfrost/vue": "^0.5.1"
  },
  "peerDependenciesMeta": {
    "@byfrost/svelte": {
      "optional": true
    },
    "@byfrost/vue": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/janouma/byfrost.git"
  }
}
